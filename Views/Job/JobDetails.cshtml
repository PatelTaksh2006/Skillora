@model Skillora.Models.ViewModels.JobViewModel

@{
    ViewData["Title"] = "JobDetails";
}

<h1>JobDetails</h1>

<div>
    <h4>JobViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.package)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.package)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinCGPA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinCGPA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinPercentage10)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinPercentage10)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinPercentage12)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinPercentage12)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MinAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinAge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxAge)
        </dd>
        <dd>
            
            @foreach(var item in Model.Skills)
            {
                <span class="badge badge-info">@item</span>
            }
        </dd>
