    
@model Skillora.Models.Entities.Company

@{
    ViewData["Title"] = "Company Profile";
}

<h2>Company Profile</h2>

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Industry:</strong> @Model.Industry</p>
            <p><strong>Jobs Posted:</strong> @(Model.Job != null ? Model.Job.Count : 0)</p>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Edit Profile</a>
}
else
{
    <div class="alert alert-warning">Company profile not found.</div>
}
