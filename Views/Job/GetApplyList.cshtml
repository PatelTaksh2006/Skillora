@model List<ApplyStudentViewModel>
@{
    ViewData["Title"] = "GetApplyList";
}

<h1>Students</h1>


<form asp-controller="Job" asp-action="GetApplyList" method="post">
    @* Hidden field for Job ID *@
    <input type="hidden" name="id" value="@ViewData["id"]" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Cgpa</th>
                <th>10th %</th>
                <th>12th %</th>
                <th>Skills</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        @* Only allow selection if student is "Applied" *@
                        @if (ViewData["result"] == "applied")
                        {
                            <input type="checkbox" name="selectedStudents" value="@student.StudentId" />
                        }
                    </td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>@student.Cgpa</td>
                    <td>@student.Percentage10</td>
                    <td>@student.Percentage12</td>
                    <td>
                        @foreach (var skill in student.Skills)
                        {
                            <span class="badge badge-info">@skill</span>
                        }
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Shortlist Selected Students" class="btn btn-primary" />
    </div>
</form>
