@{
    ViewData["Title"] = "Offered Jobs";
}

<h2>Offered Jobs</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Status</th>
            <th>Job Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                @if(job.status==true)
                {
                    <td>Selected</td>
                }
                else
                {
                    <td>Rejected</td>
                }
                <td>@job.JobName</td>
                <td>
                    <a asp-controller="Job" asp-action="JobDetails" asp-route-id="@job.JobId" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary btn-sm">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>