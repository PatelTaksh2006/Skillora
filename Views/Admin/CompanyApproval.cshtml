@model IEnumerable<Skillora.Models.ViewModels.CompanyViewModel>

@{
    ViewData["Title"] = "CompanyApproval";
}

<h1>CompanyApproval</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry)
            </td>
            <td>
                    <form asp-action="ApproveCompany" asp-route-userId="@item.userId" method="post">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form asp-action="RejectCompany" asp-route-userId="@item.userId" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>

                
            </td>
        </tr>
}
    </tbody>
</table>
