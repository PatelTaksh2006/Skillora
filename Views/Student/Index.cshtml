@model Skillora.Models.Entities.Student

@{
    ViewData["Title"] = "Student Profile";
    ViewData["role"] = "Student";
    ViewData["id"] = Model?.Id;
}

<h2>Student Profile</h2>

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Pincode:</strong> @Model.Pincode</p>
            <p><strong>Github:</strong> @Model.Github</p>
            <p><strong>CGPA:</strong> @Model.Cgpa</p>
            <p><strong>10th Percentage:</strong> @Model.Percentage10</p>
            <p><strong>12th Percentage:</strong> @Model.Percentage12</p>
            <p><strong>Skills:</strong>
                @if (Model.SkillStudents != null && Model.SkillStudents.Any())
                {
                    <ul>
                        @foreach (var skill in Model.SkillStudents)
                        {
                            <li>@skill.Skill?.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No skills listed.</span>
                }
            </p>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Edit Profile</a>
}
else
{
    <div class="alert alert-warning">Student profile not found.</div>
}
